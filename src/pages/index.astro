---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import authorImage from "../assets/me.png";
import Skills from "@components/Skills";
import { title, description, country, author } from "../data/socials";
---

<Layout title={title}>
  <main class="space-y-20">
    <section class="relative">
      <div
        class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
      >
        <div
          class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-blue-700 to-blue-900 opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"
          style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
        >
        </div>
      </div>

      <div class="relative mx-auto max-w-4xl">
        <div class="sm:flex sm:items-center sm:justify-between sm:gap-12">
          <div class="relative group overflow-hidden">
            <Image
              src={authorImage}
              alt={title}
              loading="eager"
              width={320}
              height={320}
              class="h-auto w-40 sm:w-48 md:w-56 lg:w-64 object-cover bg-transparent"
            />
          </div>

          <div class="mt-8 sm:mt-0 sm:max-w-xl">
            <h1
              class="text-4xl font-bold text-zinc-800 dark:text-zinc-100 sm:text-5xl animate-fade-in"
            >
              {author}
            </h1>
            <div class="mt-4 flex items-center gap-2 animate-slide-right">
              <span
                class="inline-flex items-center rounded-full bg-blue-100 px-3 py-1 text-sm font-medium text-blue-800 dark:bg-blue-900 dark:text-blue-200 hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors duration-300"
              >
                I'm from
              </span>
              <span class="inline-flex items-center gap-1 group">
                {country}
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 51.18 38.4"
                  class="inline-block h-6 w-6 transition-transform duration-500 group-hover:rotate-12"
                >
                  <path
                    d="M17.75 0v38.4H3.03C1.37 38.4 0 37.04 0 35.37V3.03C0 1.36 1.37 0 3.03 0h14.72z"
                    fill="#002b7f"></path>
                  <path fill="#fcd116" d="M37.45 0v38.4h-19.7V0h19.7z"></path>
                  <path
                    d="M37.45 38.4V0h14.72c1.67 0 3.03 1.36 3.03 3.03v32.33c0 1.67-1.37 3.03-3.03 3.03H37.45v.01z"
                    fill="#ce1126"></path>
                </svg>
              </span>
            </div>
            <p
              class="py-4 text-neutral-600 dark:text-neutral-400 text-md animate-fade-up"
            >
              {description}
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="relative" aria-labelledby="skills-title">
      <h2
        id="skills-title"
        class="text-2xl font-bold text-neutral-900 dark:text-white animate-fade-in"
      >
        Skills & Technologies
      </h2>
      <p class="text-sm text-neutral-500 dark:text-neutral-400 animate-fade-up">
        Here are some of the technologies I've been working with:
      </p>

      <Skills client:load />
    </section>
  </main>
</Layout>
